<section class="postslist">
	{% for post in postslist | reverse %}
		<article {% if post.url == url %} data-current="current item"{% endif %}>
			<h3 class="posttitle">
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h3>
			{% if post.data.summary %}
				<p>
					{{ post.data.summary }}
				</p>
			{% endif %}
			<p class="postmeta">
				<time datetime="{{ post.date | machineDate }}">
					<small>{{ post.date | readableDate }}{# by <a href="/authors/{{ post.data.author | slug }}/">{{ post.data.author }}</a> #}
					{% if post.data.tags %}
						â‹…
						{% for tag in post.data.tags %}
						{%- if tag != "post" -%}
							{% set tagUrl %}/tags/{{ tag }}/{% endset %}
						<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
						{%- endif -%}
						{% endfor %}
					{% endif %}
					</small>
				</time>
			</p>
			{# {% if post.data.tags %}
